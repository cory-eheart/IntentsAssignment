<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/layout_spacing_vertical"
        android:paddingHorizontal="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_top" />

        <LinearLayout
            android:id="@+id/name_row_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/name_icon_iv"
                style="@style/AppTheme.ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/layout_spacing_vertical"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_perm_identity_black_24" />

            <EditText
                android:id="@+id/first_name_tv"
                style="@style/AppTheme.ContactForm.EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/layout_spacing_vertical"
                android:layout_weight="1"
                android:hint="@string/first_name_hint" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/last_name_row_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/last_name_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/layout_spacing_vertical"
                android:layout_weight="0"
                android:alpha="0"
                app:srcCompat="@drawable/ic_perm_identity_gray_smaller" />

            <EditText
                android:id="@+id/last_name_tv"
                style="@style/AppTheme.ContactForm.EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/layout_spacing_vertical"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:hint="@string/last_name_hint" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_row_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phone_icon_iv"
                style="@style/AppTheme.ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/layout_spacing_vertical"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_phone_black_24dp" />

            <EditText
                android:id="@+id/phone_number_tv"
                style="@style/AppTheme.ContactForm.EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/layout_spacing_vertical"
                android:layout_weight="1"
                android:hint="@string/phone_hint" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_row_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/email_icon_iv"
                style="@style/AppTheme.ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/layout_spacing_vertical"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_email_black_24dp" />

            <EditText
                android:id="@+id/email_tv"
                style="@style/AppTheme.ContactForm.EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/layout_spacing_vertical"
                android:layout_weight="1"
                android:hint="@string/email_hint" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/map_row_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/map_icon_iv"
                style="@style/AppTheme.ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/layout_spacing_vertical"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_place_black_24dp" />

            <EditText
                android:id="@+id/map_tv"
                style="@style/AppTheme.ContactForm.EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/layout_spacing_vertical"
                android:layout_weight="1"
                android:hint="@string/address_hint" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/website_row_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/website_icon_iv"
                style="@style/AppTheme.ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/layout_spacing_vertical"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_public_black_24dp" />

            <EditText
                android:id="@+id/website_tv"
                style="@style/AppTheme.ContactForm.EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/layout_spacing_vertical"
                android:layout_weight="1"
                android:hint="@string/website_hint" />
        </LinearLayout>

        <Button
            android:id="@+id/save_contact_btn"
            style="@style/AppTheme.ContactForm.Button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/button_margin_top"
            android:onClick="onButtonClick"
            android:text="@string/save_button_label" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>